{
  "name": "minimal-arduino",
  "displayName": "Minimal Arduino",
  "publisher": "zmanu",
  "description": "Custom lightweight Arduino IDE extension with IntelliSense and Sidebar Management",
  "version": "0.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/zmanul/minimal-arduino.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "extensionDependencies": [
    "ms-vscode.vscode-serial-monitor",
    "ms-vscode.cpptools"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {

    "configuration": {
      "configurationDefaults": {
      "files.associations": {
        "*.ino": "cpp"
        }
      },
      "title": "Minimal Arduino",
      "properties": {
        "minimalArduino.cliPath": {
          "type": "string",
          "default": "",
          "description": "The absolute path to your arduino-cli executable. Leave empty to auto-detect via %PATH%."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "minimalArduinoExplorer",
          "title": "Minimal Arduino",
          "icon": "$(chip)"
        }
      ]
    },
    "views": {
      "minimalArduinoExplorer": [
        {
          "id": "minimalArduino.boardsView",
          "name": "Target Board",
          "icon": "circuit-board"
        },
        {
          "id": "minimalArduino.portsView",
          "name": "Connected Ports",
          "icon": "plug"
        },
        {
          "id": "minimalArduino.libsView",
          "name": "Library Manager",
          "icon": "library"
        }
      ]
    },
    "commands": [
      {
        "command": "minimalArduino.autoDetect",
        "title": "Refresh Hardware & Libraries",
        "icon": "$(refresh)"
      },
      {
        "command": "minimalArduino.compile",
        "title": "Verify / Compile",
        "icon": "$(check)"
      },
      {
        "command": "minimalArduino.upload",
        "title": "Upload to Board",
        "icon": "$(arrow-right)"
      },
      {
        "command": "minimalArduino.serialMonitor",
        "title": "Open Serial Monitor",
        "icon": "$(terminal)"
      },
      {
        "command": "minimalArduino.newSketch",
        "title": "New Sketch",
        "icon": "$(new-file)"
      },
      {
        "command": "minimalArduino.selectBoard",
        "title": "Search Boards",
        "icon": "$(search)"
      },
      {
        "command": "minimalArduino.setBoard",
        "title": "Set Board"
      },
      {
        "command": "minimalArduino.setPort",
        "title": "Set Port"
      },
      {
        "command": "minimalArduino.installLib",
        "title": "Install Library"
      },
      {
        "command": "minimalArduino.refreshIntellisense",
        "title": "Refresh C/C++ IntelliSense"
      },
      {
        "command": "minimalArduino.searchLibrary",
        "title": "Search & Install Library",
        "icon": "$(search)"
      }
    ],
    "keybindings": [
      {
        "command": "minimalArduino.newSketch",
        "key": "ctrl+alt+n",
        "mac": "cmd+alt+n",
        "when": "editorTextFocus"
      },
      {
        "command": "minimalArduino.compile",
        "key": "ctrl+alt+b",
        "mac": "cmd+alt+b",
        "when": "resourceExtname == .ino"
      },
      {
        "command": "minimalArduino.upload",
        "key": "ctrl+alt+u",
        "mac": "cmd+alt+u",
        "when": "resourceExtname == .ino"
      },
      {
        "command": "minimalArduino.serialMonitor",
        "key": "ctrl+alt+m",
        "mac": "cmd+alt+m",
        "when": "resourceExtname == .ino"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "minimalArduino.newSketch",
          "group": "navigation@0"
        },
        {
          "command": "minimalArduino.autoDetect",
          "group": "navigation@1",
          "when": "resourceExtname == .ino"
        },
        {
          "command": "minimalArduino.compile",
          "group": "navigation@2",
          "when": "resourceExtname == .ino"
        },
        {
          "command": "minimalArduino.upload",
          "group": "navigation@3",
          "when": "resourceExtname == .ino"
        },
        {
          "command": "minimalArduino.serialMonitor",
          "group": "navigation@4",
          "when": "resourceExtname == .ino"
        }
      ],
      "view/title": [
        {
          "command": "minimalArduino.selectBoard",
          "when": "view == minimalArduino.boardsView",
          "group": "navigation@1"
        },
        {
          "command": "minimalArduino.autoDetect",
          "when": "view == minimalArduino.boardsView || view == minimalArduino.portsView || view == minimalArduino.libsView",
          "group": "navigation@2"
        },
        {
          "command": "minimalArduino.searchLibrary",
          "when": "view == minimalArduino.libsView",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --minify",
    "watch": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch"
  },
  "devDependencies": {
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.20.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@microsoft/vscode-serial-monitor-api": "latest",
    "vscode-cpptools": "^7.1.1"
  }
}
